doctype 5
html
    head
        meta(charset='utf-8')
        title It's Friday!
        style
            @import url('/css/friday.css');
    body
        #msg-list
            if flashMsg
                .msg
                    |!{flashMsg}

        #content
            if !authenticated
                include sign-in
            else
                include settings
            include about

        #container
            object(type='application/x-shockwave-flash', data='/flash/friday.swf')
                param(name='movie', value='/flash/friday.swf')
                param(name='wmode', value='transparent')
            object(type='application/x-shockwave-flash', data='/flash/not_friday.swf')
                param(name='movie', value='/flash/not_friday.swf')
                param(name='wmode', value='transparent')

        script(src='/js/friday.js')