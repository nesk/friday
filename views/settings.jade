extends layout

block content
    #settings
        form(method='post')
            |Select which hour you want to remember when it's friday.
            br
            br

            select(name='gmt')
                option(selected) Choose your time zone...
                - for(var i = -12, gmt ; i <= 12 ; i++)
                    if i > -10 && i < 0
                        - gmt = i +'';
                        - gmt = gmt[0] +'0'+ gmt[1];
                    else if i >= 0 && i < 10
                        - gmt = '0'+ i;
                    else
                        - gmt = i;
                    option(value=i) GMT #{gmt}

            - var hour;
            select(name='hour')
                option(selected) Choose your hour...
                option(value="0") 12 AM
                - for(i = 1 ; i <= 11 ; i++)
                    - hour = (i < 10) ? '0'+ i : i;
                    option(value=i) #{hour} AM
                option(value="12") 12 PM
                - for(i = 1 ; i <= 11 ; i++)
                    - hour = (i < 10) ? '0'+ i : i;
                    option(value=i+12) #{hour} PM